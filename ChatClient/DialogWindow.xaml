<Window x:Class="ChatClient.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="DialogWindow" Height="300" Width="500" ResizeMode="NoResize" Background="#e6e6ff">
    
        <StackPanel VerticalAlignment="Center" Width="300">
        <Label Content="Name:" Margin="10"/>
        <TextBox Name="UserNameTextBox"  Margin="10"/>
        <Label Content="Room name:" Margin="10"/>
        <TextBox Name="RoomNameTextBox" Margin="10"/>
        <Button Content="Ok" Margin="10" Width="100" Click="OnOkclicked" />
    </StackPanel>

</Window>
